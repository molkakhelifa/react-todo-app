pipeline {
    agent any

    environment {
        IMAGE_NAME = "react-dev"
        CONTAINER_NAME = "react-dev-${BUILD_NUMBER}"
        DEV_PORT = "${8080 + (BUILD_NUMBER.toInteger() % 100)}"  // Port dynamique pour éviter conflit
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                bat 'npm ci'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Run Docker') {
            steps {
                // Supprime le conteneur précédent si existant
                bat "docker rm -f ${CONTAINER_NAME} || exit /b 0"
                // Build de l'image Docker
                bat "docker build -t ${IMAGE_NAME}:latest ."
                // Run du conteneur avec port dynamique
                bat "docker run -d -p ${DEV_PORT}:80 --name ${CONTAINER_NAME} ${IMAGE_NAME}:latest"
            }
        }

        stage('Smoke Test') {
            steps {
                // Appel du script de smoke-test
                bat 'call smoke\\smoke-test.bat'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'dist/**, smoke/smoke.log', allowEmptyArchive: true
            }
        }

        stage('Cleanup') {
            steps {
                echo "Le conteneur ${CONTAINER_NAME} est conservé pour l'environnement dev"
            }
        }
    }
}
