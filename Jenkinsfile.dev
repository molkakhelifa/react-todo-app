pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Setup') {
      steps {
        bat 'npm ci'
      }
    }

    stage('Build') {
      steps {
        bat 'npm run build'
      }
    }

    stage('Run Docker') {
      steps {
        bat 'docker rm -f react-dev || exit /b 0'
        bat 'docker build -t react-dev:latest .'
        bat 'docker run -d -p 8080:80 --name react-dev react-dev:latest'
      }
    }

    stage('Smoke Test') {
      steps {
        bat 'call smoke\\smoke-test.bat'
      }
    }

    stage('Archive Artifacts') {
      steps {
        archiveArtifacts artifacts: 'dist/**, smoke/smoke.log', allowEmptyArchive: true
      }
    }

    stage('Cleanup') {
      steps {
        echo 'Container kept running for dev environment'
      }
    }
  }
}
