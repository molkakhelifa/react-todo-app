pipeline {
    agent any

    environment {
        IMAGE_NAME = "react-dev"
        CONTAINER_NAME = "react-dev-${BUILD_NUMBER}"
        // Génère un port entre 8080 et 8180 pour éviter de dépasser 65535
        DEV_PORT = "${8080 + (BUILD_NUMBER % 100)}"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                bat 'npm ci'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Run Docker') {
            steps {
                // Supprime le conteneur si déjà existant
                bat "docker rm -f ${CONTAINER_NAME} || exit /b 0"
                // Build de l'image Docker
                bat "docker build -t ${IMAGE_NAME}:latest ."
                // Run avec port dynamique
                bat "docker run -d -p ${DEV_PORT}:80 --name ${CONTAINER_NAME} ${IMAGE_NAME}:latest"
                echo "Container running on port ${DEV_PORT}"
            }
        }

        stage('Smoke Test') {
            steps {
                bat 'call smoke\\smoke-test.bat'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'dist/**, smoke/smoke.log', allowEmptyArchive: true
            }
        }

        stage('Cleanup') {
            steps {
                echo "Container kept running for dev environment: ${CONTAINER_NAME}"
            }
        }
    }
}
